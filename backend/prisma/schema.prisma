// Prisma Schema - Modèle de données Microblog
// Documentation : https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modèle Utilisateur
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String   // Stocké haché avec bcrypt
  bio       String?  // Optionnel (max 160 caractères - validé en app)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relation : Un utilisateur peut avoir plusieurs posts
  posts     Post[]
  
  @@map("users") // Nom de la table en DB
}

// Modèle Post
model Post {
  id        Int      @id @default(autoincrement())
  content   String   // Max 280 caractères (validé en app)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relation : Un post appartient à un utilisateur
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@map("posts") // Nom de la table en DB
}
